<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view_graphic.ChatPage"
            prefHeight="720.0" prefWidth="1280.0" fx:id="borderPane">

    <top>
        <HBox alignment="CENTER" styleClass="titleBox">
            <Text text="Chat Menu" styleClass="title"/>
        </HBox>
    </top>

    <center>

        <VBox spacing="10" alignment="CENTER" maxWidth="350">
            <Button styleClass="primary-btn" text="Chat Public" onMouseClicked="#enterPublicChatMenu"/>
            <Button styleClass="secondary-btn" text="Chat Private"  onMouseClicked="#enterPrivateChatMenu"/>
            <Button styleClass="secondary-btn" text="Chat Rooms"  onMouseClicked="#enterChatRooms"/>
            <Button styleClass="secondary-btn" text="Back" onMouseClicked="#back"/>
        </VBox>

    </center>

    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>

</BorderPane>
