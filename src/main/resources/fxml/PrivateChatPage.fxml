<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view_graphic.PrivateChat"
            prefHeight="720.0" prefWidth="1280.0" fx:id="borderPane">
    <center>
        <ScrollPane>
            <VBox spacing="10" fx:id="messageBox">

            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <HBox>
            <TextArea styleClass="chatTextArea" fx:id="textArea" promptText="Write a message"/>
            <Button styleClass="sendButton" fx:id="sendButton" text="Send" onMouseClicked="#sendMessage"/>
        </HBox>
    </bottom>
    <stylesheets>
        <URL value="@../css/style.css"/>
    </stylesheets>
</BorderPane>